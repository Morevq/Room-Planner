<Window x:Class="RoomPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoomPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid Background="#FF3F3F46">
        <Grid x:Name="SettingsPanel" VerticalAlignment="Top" Height="50" Background="#FF333337"/>
        <SelectiveScrollingGrid HorizontalAlignment="Left" Margin="0,50,0,0" Width="400">
            <SelectiveScrollingGrid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </SelectiveScrollingGrid.RowDefinitions>
            <SelectiveScrollingGrid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </SelectiveScrollingGrid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Height="43.875" TextWrapping="Wrap" Text="Стена" VerticalAlignment="Top" Width="200" FontSize="18"/>
            <TextBlock HorizontalAlignment="Left" Height="79.875" TextWrapping="Wrap" Text="Дверь" VerticalAlignment="Top" Width="200" FontSize="18" Grid.Column="1"/>
        </SelectiveScrollingGrid>
    </Grid>
</Window>
